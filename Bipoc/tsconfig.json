{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "esnext",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/common/*",
        "src/models/*",
        "src/views/*",
        "src/db/*",
        "src/controllers/*",
        "src/authentication/*",
        "src/routes/*"
      ]
    }
  },
  "include": [
    "./src/*",
    "./"
  ],
  "exclude": [
    "node_modules"
  ],
}